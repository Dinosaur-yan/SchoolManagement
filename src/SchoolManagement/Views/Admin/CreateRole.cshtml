@model RoleCreateViewModel
@{
	ViewBag.Title = "创建角色";
}

<form asp-controller="admin" asp-action="createrole" method="post">

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="RoleName" class="form-control" placeholder="请输入角色名称" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary" style="width:auto">创建角色</button>
		</div>
	</div>

</form>
