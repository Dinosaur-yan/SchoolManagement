@model IEnumerable<Student>
@{
	ViewBag.Title = "学生列表页面";
}

<div class="card-deck">
	@foreach (var student in Model)
	{
		<div class="card m-3">

			<div class="card-header">
				<h3 class="card-title">@student.Name</h3>
			</div>

			<img asp-append-version="true" class="card-img-top" src="~/images/noimage.png" />

			<div class="card-body text-center">
				<h5 class="card-title">主修科目:@student.Major</h5>
			</div>

			<div class="card-footer text-center">
				<a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-info m-1">查看</a>
				<a href="#" class="btn btn-primary m-1">编辑</a>
				<a href="#" class="btn btn-danger m-1">删除</a>
			</div>

		</div>
	}
</div>
